{
  "name": "voting-system",
  "version": "1.0.0",
  "description": "Serverless Voting System with DynamoDB, Lambda, and Cognito",
  "type": "module",
  "scripts": {
    "test": "echo 'Tests not implemented yet'",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.mjs\"",
    "deploy": "cd terraform && terraform apply",
    "deploy:auto": "cd terraform && terraform apply -auto-approve",
    "destroy": "cd terraform && terraform destroy",
    "package": "node scripts/package-lambdas.mjs",
    "validate": "cd terraform && terraform validate"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "dynamodb",
    "cognito",
    "voting"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.600.0",
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/client-s3": "^3.600.0",
    "@aws-sdk/lib-dynamodb": "^3.600.0",
    "@aws-sdk/s3-request-presigner": "^3.600.0",
    "aws-jwt-verify": "^4.0.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
